generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  profilePicture String? @db.Text
  sign      String?  @db.Text
  roleId    Int
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  status    String   @default("PENDING") // PENDING, APPROVED, VERIFIED, REJECTED
  verificationToken String? @db.Text
  documents Document[] @relation("UploadedDocuments")
  signatureRequests SignatureRequest[] @relation("SignerRequests")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String
  filePath  String   @db.Text
  checksum  String   @unique
  uploaderId Int
  uploader  User     @relation("UploadedDocuments", fields: [uploaderId], references: [id], onDelete: Cascade)
  requests  SignatureRequest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SignatureRequest {
  id        Int      @id @default(autoincrement())
  documentId Int
  document  Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  signerId  Int
  signer    User     @relation("SignerRequests", fields: [signerId], references: [id], onDelete: Cascade)
  status    String   @default("PENDING") // PENDING, SIGNED, REJECTED
  isSigned  Boolean  @default(false)
  x         Float
  y         Float
  page      Int
  type      String   @default("signature")
  text      String?  @db.Text
  width     Float?
  height    Float?
  signedAt  DateTime?
  rejectedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
